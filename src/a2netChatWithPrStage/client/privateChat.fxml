<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121"
      fx:controller="a2netChatWithPrStage.client.Controller">

    <VBox fx:id="prVBoxChat" HBox.hgrow="ALWAYS">
        <!--для каждой метки каждого сообщения отдельные боксы-->
    </VBox>

    <!--нижняя панель для отправки сообщений-->
    <HBox fx:id="prBottomPanel">
        <TextField fx:id="prTextField" onAction="#sendMsgInPrivateChat" promptText="Введите текст" HBox.hgrow="ALWAYS" />
        <Button fx:id="prBtnSend" onAction="#sendMsgInPrivateChat" text="Send" />
    </HBox>

</VBox>
