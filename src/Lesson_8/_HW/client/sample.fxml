    <VBox fx:id="registrationForm">
        <Label text="Регистрационная форма."/>
        <Label text="Придумайте и введите свои данные."/>

        <Label text="Nickname - имя в чате, состоящее только из латинских букв и цифр"/>
        <HBox>
            <Label text="Nickname:"/>
            <TextField HBox.hgrow="ALWAYS" promptText="Имя в чате" fx:id="regFormNickField"></TextField>
        </HBox>

        <Label text="Уникальный логин, состоящий только из латинских букв и цифр"/>
        <HBox>
            <Label text="Логин:"/>
            <TextField HBox.hgrow="ALWAYS" promptText="Логин" fx:id="regFormLoginField"></TextField>
        </HBox>

        <Label text="Пароль, не менее 8-ми символов, состоящий из:\n- латинских букв в верхнем и нижнем регистре;\n- цифр и спецсимволов на клавиатуре."/>
        <HBox>
            <Label text="Пароль:"/>
            <PasswordField promptText="Пароль" fx:id="regFormPasswordField"/>
        </HBox>

        <!--поле для вывода служебных сообщений во время регистрации-->
        <TextArea fx:id="regFormTextArea" editable="false"/>

        <Button text="Отправить" onAction="#tryToRegister"/>
    </VBox>

